            <value>
                <elementReference>varSignalAlarmID</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varExceptionRecord.Asset__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAssetID</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varExceptionRecord.Case__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varNewCase.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varExceptionRecord.Measure_1__c</assignToReference>
